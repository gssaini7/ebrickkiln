@model R.BusinessEntities.ClientRecordModel


@using (Html.BeginForm("Lock", "User", FormMethod.Post, new { id = "popupForm" }))
{
    
    
    
    
    @Html.HiddenFor(a => a.recordid)

    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
        <h4 class="modal-title" id="exampleModalLabel">Are you sure, want to lock?</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Product Name</label>
            <p>@Model.productname</p>
           
        </div>
        <div class="form-group">
            <label>Product ID</label>
            <p>@Model.productid</p>
        </div>
        <div class="form-group">
            <label>Business Name</label>
            <p>@Model.businessname</p>
           
        </div>
        <div class="form-group">
            <label>Client Name</label>
            <p>@Model.clientname</p>
        </div>
        <div class="form-group">
            <label>Client Mobile</label>
            <p>@Model.contactmobile</p>
           
        </div>
        <div class="form-group">
            <label>Client Email</label>
            <p>@Model.clientemail</p>
           
        </div>
        <div class="form-group">
            <label>Client Address</label>
            <p>@Model.clientaddress</p>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <input type="submit" value="Yes" class="btn btn-danger" />
    </div>
  
    
   
}
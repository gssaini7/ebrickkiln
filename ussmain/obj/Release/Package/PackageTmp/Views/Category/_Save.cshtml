@model R.BusinessEntities.CategoryMasterModel


@using (Html.BeginForm("save", "Category", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.catid > 0)
    {
    @Html.HiddenFor(a => a.catid)
    }
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Save Category</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label>Category</label>
                @Html.TextBoxFor(a => a.catname, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.catname)
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-success" />
            <a href="#" onclick="loadblankformpopup('/Category/save/0')">Clear</a>

        </div>
    </div>

    
}




            },
            "columns": [
                
                { "data": "catname", "autoWidth": true },
                {
                    "data": "catid", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/Category/save/' + data + '"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>';
                    }
                }
            ]
        };
        var savepage = '/Category/save/0';

        filldatatablepopup(oTableData, savepage);
    });

    </script>

@model R.BusinessEntities.updatepassword




@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { id = "baseForm" }))
{
  if (Model != null && Model.recordid > 0)
    {
    @Html.HiddenFor(a => a.recordid)
    }
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Change password</h3>
        </div>
        <div class="panel-body">
            <div class="row">
            <div class="col-md-3">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.newpassword)
                @Html.TextBoxFor(a => a.newpassword, new { @class = "form-control" })

                @Html.ValidationMessageFor(a => a.newpassword)
            </div>
            </div>
            <div class="col-md-3">
             <div class="form-group">
             @Html.DisplayNameFor(model => model.confirmpassword)

                @Html.TextBoxFor(a => a.confirmpassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.confirmpassword)
            </div> 
                 </div>
        
            
           </div>
            
        </div>
        <div class="panel-footer">
            <input type="submit" value="Change" class="btn btn-success" />
            <a href="#" onclick="loadblankform('/User/save/0')">Cancel</a>

        </div>
    </div>

    
}


@{
    ViewBag.Title = "Coupon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
<h1>Coupon</h1>

<div  class="tablecontainer">

    <div class="">
        <div id="myFormContent">
        </div>
    </div>

    <div class="">
        <table id="myDatatable" class="table table-striped table-bordered  table-hover">
            <thead>
                <tr>
                    
                    <th>Coupon Code</th>
                    <th>Product Amount</th>
                    <th>Message for User</th>
                    <th>Remarks</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
</div>

<script>
    $(document).ready(function () {

        var oTableData = {
            "ajax": {
                "url": '/Coupon/GetAll',
                "type": "get",
                "datatype": "json"
            },
            "columns": [
              
                { "data": "couponcode", "autoWidth": true },
                { "data": "camount", "autoWidth": true },
                { "data": "cmsgforuser", "autoWidth": true },
                { "data": "cAdminRemarks", "autoWidth": true },
                {
                    "orderable": false,
                    "data": "couponid",
                    "width": "50px",
                    "render": function (data, type, row) {
                        var locked = '<i class="fa fa-unlock" aria-hidden="true" style="color:green;"></i>';
                        if (row.cblocked)
                            locked = '<i class="fa fa-lock" aria-hidden="true" style="color:red;"></i>';
                        return '<a class="popup" href="/Coupon/save/' + data + '"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>'+
                            locked;
                    }
                }
            ],
        };
        var savepage = '/Coupon/save/0';
        filldatatable(oTableData, savepage);

    });

    </script>



@model R.BusinessEntities.TitleMasterModel


@using (Html.BeginForm("save", "Title", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.titleid > 0)
    {
    @Html.HiddenFor(a => a.titleid)
    }
    
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Save Title</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label>Title</label>
                @Html.TextBoxFor(a => a.titlename, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.titlename)
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-success" />
            <a href="#" onclick="loadblankformpopup('/Title/save/0')">Clear</a>

        </div>
    </div>
   

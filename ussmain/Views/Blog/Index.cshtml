                           + '<a href="/blog/DeleteImageConfirm/' + row.blogid + '" class="delete" id="blogid"><i class="fa fa-times" aria-hidden="true"></i></a>';

                        return data + img;
                    }
                },
                { "data": "blogdescription", },
